{
  "include": ["../../src/**/*.ts", "../../src/**/*.tsx"],
  "exclude": [ "node_modules/**/*", "**/*.js" ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@src/*": [
        "../../src/*"
      ],
    },
    "module": "esnext",
		"target": "esnext",
		"jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2015", "es2016" ],
    "typeRoots": [
      "../../node_modules/@types/**/*",
      "../../src/__typings__/**/*"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true
  },
}