{
  "include": [
    "src/**/*",
    ".cache/**/*"
  ],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    // "baseUrl": ".",
    // "paths": {
    //   "@/*": [ "./src/*" ],
    //   "@typings/*": [ "./src/typings/*" ],
    // },
    "module": "commonJS",
    "target": "es6",
    "jsx": "react",    
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es2016"],
    "esModuleInterop": true,
    "outDir": "dist",
    // "noEmit": true,
  },
}
